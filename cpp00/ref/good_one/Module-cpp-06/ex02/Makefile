# SIMPLE ===================================================================================
NAME = identify
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = srcs/

SRCS =	main.cpp		\
		identify.cpp	\
		Base.cpp
# ==========================================================================================

# INCLUDES =================================================================================
INCS_DIR = incs/
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
INCLUDE = -I$(INCS_DIR)
FLAGS = -Wall -Wextra -Werror $(INCLUDE)
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objs/

OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================

# COLORS ===================================================================================
_GREEN=$'\x1b[32m
_WHITE=$'\x1b[37m
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp $(INCS_DIR)
	@mkdir -p $(OBJS_DIR)
	@echo "$(_WHITE)Compiling: $(_GREEN)$<$(_WHITE)"
	@clang++ $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@clang++ -g -fsanitize=address $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	@echo "$(_WHITE)Cleaning: $(_GREEN)$(OBJS_DIR)$(_WHITE)"
	@rm -rf $(OBJS_DIR)
	

fclean: clean
	@echo "$(_WHITE)Cleaning: $(_GREEN)$(NAME)$(_WHITE)"
	@rm -f $(NAME)

re: fclean all
# ==========================================================================================

# SUP ======================================================================================
run: $(NAME)
	./$(NAME)
# ==========================================================================================