# SIMPLE ===================================================================================
NAME = replace
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = srcs/
SRCS =	Replace.cpp \
		Error.cpp 
# ==========================================================================================

# INCLUDES =================================================================================
INCS_DIR = incs/Replace.hpp
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
INCLUDE = -I$(INCS_DIR)
FLAGS = -Wall -Wextra -Werror $(INCLUDE)
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objs/
OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================


# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp $(INCS_DIR)
	@mkdir -p $(OBJS_DIR)
	@echo "Compiling: $<"
	@clang++ $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@clang++ -g -fsanitize=address $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	@echo "Cleaning: $(OBJS_DIR)"
	@rm -rf $(OBJS_DIR)
	@rm test_files/Monde.replace
	@rm test_files/Mohamed_Ali.replace

fclean: clean
	@echo "Cleaning: $(NAME)"
	@rm -f $(NAME)

re: fclean all
# ==========================================================================================

# SUP ======================================================================================
run: $(NAME)
	./$(NAME)

check: $(NAME)
	./$(NAME) test_files/Monde monde "pate carbo"
	./$(NAME) test_files/Mohamed_Ali "Mohamed Ali" "COMMENT C'EST BEAU"
	@echo
	@echo "MONDE ==========================================================================="
	@echo
	@cat test_files/Monde
	@echo
	@echo "MONDE.replace ==================================================================="
	@echo
	@cat test_files/Monde.replace
	@echo
	@echo "================================================================================="
	@echo
	@echo "Mohamed_Ali ====================================================================="
	@echo
	@cat test_files/Mohamed_Ali
	@echo
	@echo
	@echo "Mohamed_Ali.replace ============================================================="
	@echo
	@cat test_files/Mohamed_Ali.replace
	@echo
	@echo
	@echo "================================================================================="
# ==========================================================================================